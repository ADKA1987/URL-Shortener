doctype
html( lang="en" )
    head
        title URL Shortener
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Baking Bootstrap Snippets with Jade' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        include nav
        br
        br
    body(style="padding-bottom:10rem ;background-color:lavender" )
        .container
            div(class="col-md-12 text-center")
                form#form_login_user(name="loginuser", method="post", action="/loginuser" class="form-horizontal")
                    label #{msg}
                    br
                    br
                    div(class="col-md-12 text-center")
                        input#input_email(type="email", placeholder="Enter Email", name="email" required class="form-control")
                        input#input_password(type="password", placeholder="Enter Password", name="password" required class="form-control")
                    br
                    br
                    div(class="col-md-12 text-center")
                        br
                        br
                        button#submit_user(type="submit" ,class="btn btn-primary btn-md") submit



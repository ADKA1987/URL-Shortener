doctype
html( lang="en" )
  head
    title #{tittle}
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1.0' )
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
    link(href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet'  type='text/css')
    //- Bootswatch Theme
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

    include nav

  body(style="padding-bottom:10rem;background-color: lavender")
    .container
      div(class="text-center")
        h1 URL Shortener
        h3 aurls.herokuapp.com
      div(class="col-md-12 col-lg-12")
        form(method='post' action='/' class="form-horizontal")
          div
          input#input_url(type="text", placeholder="Enter URL",name="publicurl",class="form-control")
          br
          div(class="col-lg-12 text-center")
            label(class="text-center") Enter the site like http://**** or https://***
          div
          button#submit_url(type="submit", name="submit",class="btn btn-primary btn-block custom") Convert
          br
          br
          div(class="col-lg-12 text-center")
            a(href= oldurl ) #{newurl}
          br

          label #{msg}


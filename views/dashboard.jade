doctype
html( lang="en" )
    head
        title URL Shortener
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        script( src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script( src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
        include dashboardNav
    body(style="padding-bottom:10rem;background-color: lavender")
        .container
            div
                form#form_loggedin_user(name="newurl", method="post", action="/main",class="form-horizontal")
                    div(class="form-horizontal")
                    input#input_url(type="text", placeholder="Enter URL", name="urltext",class="form-control")
                    div(class="form-horizontal")
                    label #{msg}
                    div(class="form-horizontal")
                    button#submit_url(type="submit", value="url", name="submit" ,class="btn btn-primary btn-md") Add New URL
                    button#submit_removeAll(type="submit" , value="removeAll", name="submit" class="btn btn-danger") Remove All
                    div(class="col-lg-12 text-center")
                        a(href=newgeneratedurl) #{newgeneratedurl}
                    div
                       table(class="table table-hover")
                          thead
                             tr
                                th Original URL
                                th Page Title
                                th  New URL
                                th
                          tbody
                            each url, i in dashboard
                                tr
                                    td
                                        div(calss='container')
                                            div(calss='dropdown')
                                                button(type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown")
                                                    span(class="caret")
                                                ul(class="dropdown-menu")
                                                    li
                                                        a(href= url.oldurl) #{url.oldurl}
                                    td(style="word-wrap: break-word;min-width: 20px;max-width: 30;")
                                        a(href= url.oldurl) #{url.urltitle}
                                    td
                                        a(href= url.newurl class="btn btn-info") #{'aurls.herokuapp.com/'+ url.newurl}
                                    td
                                        button(type="submit",value= url.newurl,name="submit" ,id=url.newurl,class="btn btn-danger btn-xs glyphicon glyphicon-remove")
